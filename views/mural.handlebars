<header>
  <div class="container">
    <div class="row ">
      <div class="col-md-12 text-right nav-bar">
        <button type="button" id="home" class="btn btn-primary home-button align-right">home</button>
        <button type="button" id="logout" class="btn btn-primary align-right">logout</button>
      </div>
    </div>
    <h1>MURALS</h1>
    <p class="pun">"Not for the paint of heart..."</p>
    <h1 class="text-center">welcome</h1>
</header>
<main>
  <div class="input-group search-form">
    <input id="search-input" class="form-control" type="text" placeholder="Search" aria-label="Search" />
    


      <div class="container">
    <div class="row">
      <div class="bunchaSearchBtns col text-center">
        <button type="button" id="mural-search-button" class="btn btn-primary search-button-color" data-toggle="modal" data-target="#myModal">Zip Code</button>
        <button type="button" id="mural-title-button" class="btn btn-primary search-button-color">Title</button>
        <button type="button" id="luckybutton" class="btn btn-primary align-center search-button-color">Find one for me!</button>
      </div>
    </div>
  </div>

  
      <!-- Modal HTML -->
      <div id="myModal" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Mural Results</h5>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
              <!-- Content will be loaded here from "remote.php" file -->
              <p>hey loser</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="main-body container">
    <div class="left-body container">
      <div class="muralImgs container">
        <h2 class="muralImgsTitle">Mural Images</h2>
        <span %=typeof msg !='undefined' ? msg : '' %></span>
        <form action="/mural/:id" method="POST" enctype="multipart/form-data">
          <div class="file-field input-field">
            <div class="btn ">
              <span>File</span>
              <input name="myImage" type="file">
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text">
            </div>
          </div>
          <button type="submit" class="btn">Submit</button>
        </form>
        <br>
        <img src="<%= typeof file != 'undefined' ? file : '' %>" class="responsive-img">
        <img src="https://via.placeholder.com/150" alt="text" width="100%" />
      </div>
      <div class="muralInfo container">
        <h2 class="muralInfoTitle">Mural Information</h2>

        {{!-- I PUT THIS TABLE HERE HEHEHEH --}}
        <table class="table-section2">
          <tbody id="tablebody">
            <tr>
              <td>
              </td>
            </tr>
          </tbody>
        </table>
        <br>


        {{#each murals as |mural|}}
        <div>
          <div>
            <h2>
              <a href="/mural/{{mural.id}}">{{mural.name}}</a>
            </h2>
            <p>Created by {{mural.artist}}</p>
          </div>
          <div>
            <p>
              {{mural.description}}
            </p>
          </div>
        </div>
      </div>
      {{/each}}

    </div>
  </div>

  <div class="right-body container">
    <div class="reviews container">
      <h2 class="reviewsTitle">Reviews</h2>
      {{#each reviews as |review|}}
      <div>
        <div>
          <h5>
            {{review.review}}
          </h5>
          <p>Review by {{review.name}}</p>
        </div>
      </div>
      {{/each}}

      <form class="rateMe1 text-center">
        {{!-- <button id="rating1" class="rating1 btn btn-primary" type="submit">1</button>
        <button type="submit" id="commentSubmit" class="commentSubmit btn btn-primary">Submit</button> --}}
        <label for="exampleFormControlTextarea1" class="form-label">Review Comments</label>
        <textarea id="commentInput" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        <div class="container">
          <div class="row">
            <div class=" text center">
              <button type="sumbit" id="commentSubmit" class="commentSubmit btn btn-primary text-center">Submit</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
  </div>
  </div>
</main>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
<script src="/js/mural.js"></script>
<script src="/js/logout.js"></script>

