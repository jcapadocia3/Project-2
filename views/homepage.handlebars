<header>
  <h1>MURALS</h1>
  <p class="pun">"Lorem ipsum....."</p>
</header>
<main class="">
  <div class="input-group search-form">
    <input
      id="search-input"
      class="form-control"
      type="text"
      placeholder="Search"
      aria-label="Search"
    />
    <button type="button" id="mural-search-button" class="btn btn-primary">
      <i class="fas fa-search"></i>
    </button>
    <button id= "luckybutton" 
            class= "btn btn-primary align-center"
            type="button">
            Random
    </button>
    <button id= "zipcodebutton" 
            class= "btn btn-primary align-center"
            type="button">
            Zipcode
    </button>
    <button id= "artistbutton" 
            class= "btn btn-primary align-center"
            type="button">
            Artist
    </button>
  </div>
  <div class="main-body container">
    <div class="left-body container">
      <div class="muralImgs container">
        <h2 class="muralImgsTitle">Mural Images</h2>
        <img src="https://via.placeholder.com/150" alt="text" width="100%" />
      </div>
      <div class="muralInfo container">
        <h2 class="muralInfoTitle">Mural Information</h2>
        <p>Lorem ipsum...</p>





  {{#each murals as |mural| }}
<div class="row mb-4 mural">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/mural/{{mural.id}}">{{mural.name}}</a>
    </h2>
    <p>Created by {{mural.artist}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{mural.description}}
    </p>
  </div>
</div>
{{/each}}





      </div>
    </div>
    <div class="right-body container">
      <div class="reviews container">
        <h2 class="reviewsTitle">Reviews</h2>
        <p>Lorem ipsum....</p>
      </div>
    </div>
  </div>
</main>

<script src="/js/profile.js"></script>
















